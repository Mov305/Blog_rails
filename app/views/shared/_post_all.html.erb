<%= render 'shared/blog_card', post:post, user:user %> <%= link_to user_posts_path(user,post) do %>
<div class="flex flex-col gap-2 p-5 bg-gray-200/30 rounded-br-3xl">
  <% post.return_recent_comments.each do |comment| %>
  <div>
    <span class="text-sm font-semibold text-gray-500"><%= comment.username %>:</span>
    <span class="text-sm text-gray-500"><%= comment.text %></span>
  </div>
  <% end %>
</div>
<% end %>
