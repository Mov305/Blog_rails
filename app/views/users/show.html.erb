<section class="p-5">
  <div><%= render 'shared/profile_card', user: @user %></div>
  <div class="flex flex-col items-center">
    <h1 class="text-center m-5 font-semibold text-xl">Recent Posts</h1>
    <div class="flex flex-col">
      <% @latest.each do |post| %> <%= render 'shared/blog_card', post: post, user:@user %> <% end %>
    </div>
    <%= link_to user_posts_path(@user) do %>
    <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold my-6 py-2 px-4 rounded-full">
      See all posts
    </button>
    <% end %>
  </div>
</section>
